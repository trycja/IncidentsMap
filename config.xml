<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
	    xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:gap   = "http://phonegap.com/ns/1.0"
	    id          = "im"
            version     = "1.0.0" >
    
    <name>Incidents Map</name>
    <description>This application shows you incidents which take place in your area.</description>
	<platform name="android">
    <config-file target="AndroidManifest.xml" parent="/*">
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
		<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
		<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    </config-file>
    <allow-intent href="market:*" />
    	<preference name="android-minSdkVersion" value="14" />
    	<preference name="android-targetSdkVersion" value="22" />
    	<preference name="SplashScreen" value="splash" />
   		<preference name="SplashScreenDelay" value="3000" />
  	 	<preference name="ShowSplashScreenSpinner" value="false" />
  	 	<preference name="FadeSplashScreen" value="false" />
  	 	<preference name="SplashMaintainAspectRatio" value="true" />
  	 	<preference name="SplashShowOnlyFirstTime" value="false" />
        <splash qualifier="land-mdpi" src="www/res/drawable-mdpi/splash.png" />
        <splash qualifier="land-hdpi" src="www/res/drawable-hdpi/splash.png" />
        <splash qualifier="land-xhdpi" src="www/res/drawable-xhdpi/splash.png" />
        <splash qualifier="land-xxhdpi" src="www/res/drawable-xxhdpi/splash.png" />
        <splash qualifier="land-xxxhdpi" src="www/res/drawable-xxxhdpi/splash.png" />
        <splash qualifier="port-mdpi" src="www/res/drawable-mdpi/splash.png" />
        <splash qualifier="port-hdpi" src="www/res/drawable-hdpi/splash.png" />
        <splash qualifier="port-xhdpi" src="www/res/drawable-xhdpi/splash.png" />
        <splash qualifier="port-xxhdpi" src="www/res/drawable-xxhdpi/splash.png" />
        <splash qualifier="port-xxxhdpi" src="www/res/drawable-xxxhdpi/splash.png" />
		<icon density="mdpi" src="www/res/drawable-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/res/drawable-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/res/drawable-xdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="www/res/drawable-xxhdpi/ic_launcher.png" />
		<icon density="xxxhdpi" src="www/res/drawable-xxxhdpi/ic_launcher.png" />
	</platform>

	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<plugin name="cordova-plugin-geolocation" version="2.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
	<plugin name="cordova-plugin-splashscreen" spec="5.0.2"/>
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="com.firebase.cordova" />
        <variable name="ANDROID_SCHEME" value=" " />
        <variable name="ANDROID_HOST" value=" " />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
	<plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />
	<plugin name="cordova-plugin-browsertab" spec="0.2.0" />
	<plugin name="cordova-universal-links-plugin" spec="1.2.1" />
	<plugin name="cordova-plugin-buildinfo" spec="2.0.1" />

</widget>
